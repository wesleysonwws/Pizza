@model Sabor

@{
    ViewData["Title"] = "Deletar Sabor";
}


<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Deletar Sabor @Model.Nome</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <div class="form-group">
                    <img src="@Model.ImagemURL" class="img-thumbnail" alt="@Model.Nome" />
                </div>
                <div class="form-group">
                    <h1>@Model.Nome</h1>
                </div>
                <div class="form-group">
                    <h3>@Model.DataCadastro</h3>
                </div>
                <div class="form-group">
                    <form asp-action="Deletar">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Confirmar" class="btn btn-outline-danger float-right" />
                    </form>
                    <a class="btn btn-outline-secondary" asp-action="Index">Listar Todos</a>
                </div>

            </div>
        </div>
    </div>
</div>